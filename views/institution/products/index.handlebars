<div class="row">
    <div class="col-2">
    <nav id="principal">
        <a href="/user">
            <div class="option-menu-lateral">
            <i class="fa-solid fa-address-book"></i><br>
            Usuários
            </div>
        </a>
        <a href="/institution">
            <div class="option-menu-lateral">
                <i class="fa-solid fa-building"></i><br>
                Instituições
            </div>
        </a>

        <a href="/group">
            <div class="option-menu-lateral">
                <i class="fa-solid fa-users"></i><br>
                Grupos
            </div>
        </a>
    </nav>
    </div>
    
    <div class="col-10 view-conteudo">

        {{>_msg}}
        
        {{#each feedback.erros}}
            <div class="alert alert-danger">{{texto}}</div>
        {{else}}
        {{/each}}

        <form method="post", class="form-padrao">
            <div class="row">

                <div class="col-6">
                    <label>
                        <span>Nome do produto</span>
                        <input type="text" name="name" placeholder="Nome do produto">
                    </label>
                </div>

                <div class="col-6">
                    <label>
                        <span>Descrição</span>
                        <input type="text" name="description" placeholder="Descricao">
                    </label>
                </div>

                <div class="w-100"></div>

                <div class="col-6">
                    <label>
                        <span>Indexador</span>
                        <input type="text" name="index" placeholder="Indexador">
                    </label>
                </div>

                <div class="col-6">
                    <label>
                        <span>Taxa de juros</span>
                        <input type="text" name="interest_rate" placeholder="Taxa de juros">
                    </label>
                </div>

                <div class="w-100"></div>

                <div class="col-6">
                    <label class="submit">
                    <input type="submit" value="Cadastrar">
                    </label>            
                </div>
            </div>
        </form>


    </div>
</div>
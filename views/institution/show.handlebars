<div class="row">
    <div class="col-2">
    <nav id="principal">
        <a href="/user">
            <div class="option-menu-lateral">
            <i class="fa-solid fa-address-book"></i><br>
            Usuários
            </div>
        </a>
        <a href="/institution">
            <div class="option-menu-lateral">
                <i class="fa-solid fa-building"></i><br>
                Instituições
            </div>
        </a>

        <a href="/group">
            <div class="option-menu-lateral">
                <i class="fa-solid fa-users"></i><br>
                Grupos
            </div>
        </a>
    </nav>
    </div>
    
    <div class="col-10 view-conteudo">

        <header>
            <h1>{{institution.name}}</h1>
        </header>

        {{#each feedback.erros}}
            <div class="alert alert-danger">{{texto}}</div>
        {{else}}
        {{/each}}

        <table class="default-table">
            <thead>
                <tr>
                    <td>#</td>
                    <td>Nome do grupo</td>
                    <td>Instituição</td>
                    <td>Nome do responsavel</td>
                    <td>opções</td>
                </tr>
            </thead>

            <tbody>
                {{#each groupsByInstitution}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{name}}</td>
                        <td>{{institution.name}}</td>
                        <td>{{user.name}}</td>
                        <td>
                            <form action="group/delete" method="post">
                                <input type="hidden" name="id" value={{id}}>
                                <button>Remover</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>


</div>
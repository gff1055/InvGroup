<div class="row">
    <div class="col-2">
    <nav id="principal">
        <a href="/user">
            <div class="option-menu-lateral">
            <i class="fa-solid fa-address-book"></i><br>
            Usuários
            </div>
        </a>
        <a href="/institution">
            <div class="option-menu-lateral">
                <i class="fa-solid fa-building"></i><br>
                Instituições
            </div>
        </a>

        <a href="/group">
            <div class="option-menu-lateral">
                <i class="fa-solid fa-users"></i><br>
                Grupos
            </div>
        </a>
    </nav>
    </div>
    
    <div class="col-10 view-conteudo">

        {{>_msg}}
        
        {{#each feedback.erros}}
            <div class="alert alert-danger">{{texto}}</div>
        {{else}}
        {{/each}}

        <form method="post", class="form-padrao">
            <div class="row">
                <div class="col-6">            
                    <label>
                        <span>Nome</span>
                        <input type="text" name="name" placeholder="Nome">
                    </label>
                </div>
                <div class="col-6">
                    <label class="submit">
                    <input type="submit" value="Cadastrar">
                    </label>            
                </div>
            </div>
        </form>

        <table class="default-table">
            <thead>
                <tr>
                    <td>#</td>
                    <td>Nome</td>
                    <td>opfções</td>
                </tr>
            </thead>

            <tbody>
                {{#each institutions}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{name}}</td>
                        <td>
                            <form action="/institution/delete" method="post">
                                <input type="hidden" name="id" value={{id}}>
                                <button>Remover</button>
                            </form>
                            <a href="institution/{{id}}">Detalhes</a>                                                        
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>


</div>
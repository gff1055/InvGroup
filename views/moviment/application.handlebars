<div class="row">
    <div class="col-2">
    <nav id="principal">
        <a href="/user">
            <div class="option-menu-lateral">
            <i class="fa-solid fa-address-book"></i><br>
            Usuários
            </div>
        </a>
        <a href="/institution">
            <div class="option-menu-lateral">
                <i class="fa-solid fa-building"></i><br>
                Instituições
            </div>
        </a>

        <a href="/group">
            <div class="option-menu-lateral">
                <i class="fa-solid fa-users"></i><br>
                Grupos
            </div>
        </a>
        <a href="/moviment">
            <div class="option-menu-lateral">
                <i class="fa-solid fa-money-bill-trend-up"></i><br>
                Movimentos
            </div>
        </a>
    </nav>
    </div>
    
    <div class="col-10 view-conteudo">

        {{>_msg}}
        
        {{#each feedback.erros}}
            <div class="alert alert-danger">{{texto}}</div>
        {{else}}
        {{/each}}

        <form method="post" class="form-padrao">
            <div class="row">
                <div class="col-6">
                    <label>
                        <span>Grupo</span>
                        <select name="group_id" class="custom-select">
                            <option value="" selected disabled hidden>Selecione o usuario</option>
                            {{#each groups}}
                                <option value={{id}}>{{name}}</option>
                            {{else}}
                                <option value="none">Nenhum usuario registrado</option>
                            {{/each}}
                        </select>
                    </label>
                </div>
                <div class="col-6">
                    <label>
                        <span>Produto</span>
                        <select name="product_id" class="custom-select">
                            <option value="" selected disabled hidden>Selecione a instituição</option>
                            {{#each products}}
                                <option value={{id}}>{{name}}</option>
                            {{else}}
                                <option value="none">Nenhuma instituicao registrada</option>
                            {{/each}}
                        </select>
                    </label>
                </div>

                <div class="w-100"></div>

                <div class="col-6">
                    <label>
                        <span>Valor</span>
                        <input type="text" name="name" placeholder="Nome do Grupo">
                    </label>
                </div>


                <div class="col-6">
                    <label class="submit">
                        <input type="submit" value="Cadastrar">
                    </label>
                </div>
            </div>
        </form>


    </div>
</div>
<div class="row">
    <div class="col-2">
    <nav id="principal">
        <a href="/user">
            <div class="option-menu-lateral">
            <i class="fa-solid fa-address-book"></i><br>
            Usuários
            </div>
        </a>
        <a href="/institution">
            <div class="option-menu-lateral">
                <i class="fa-solid fa-building"></i><br>
                Instituições
            </div>
        </a>

        <a href="/group">
            <div class="option-menu-lateral">
                <i class="fa-solid fa-users"></i><br>
                Grupos
            </div>
        </a>
    </nav>
    </div>
    
    <div class="col-10 view-conteudo">

        <form method="post" class="form-padrao">
            <div class="row">
                <div class="col-6">
                    <label>
                        <span>Nome do Grupo</span>
                        <input type="text" name="name" placeholder="Nome do Grupo">
                    </label>
                </div>
                <div class="col-6">
                    <label>
                        <span>User</span>
                        <input type="select" name="user_id" placeholder="User">
                    </label>
                </div>

                <div class="w-100"></div>
                <div class="col-6">
                    <label>
                        <span>Instituição</span>
                        <select name="institution_id">
                            {{#each institutions}}
                                <option value="1">1</option>
                            {{else}}
                                <option value="1">Nenhuma instituicao registrada</option>
                            {{/each}}
                        </select>
                    </label>
                </div>
                <div class="col-6">
                    <label class="submit">
                        <input type="submit" value="Cadastrar">
                    </label>
                </div>
            </div>
        </form>
               
    </div>
</div>